# give sudo to user or apps

sudo visudo

<usr> ALL=NOPASSWD: /usr/bin/application

# logging system operations

tail -f /var/log/syslog


# move files into dated folders
DatedFileFolder()
{
  for x in *.jpg; do
    d=$(date -r "$x" +%Y-%m-%d)
    mkdir -p "$d"
    mv -- "$x" "$d/"
  done
}

#cd Temp
#DatedFileFolder
#cd ..

# remove files older then 5 days old
find /path/to/files/* -mtime +5 -exec rm {} \;

#backup crontab
crontab -l > $(date +%Y%m%d).crontab

#ram disk
mkdir -p /mnt/ramdisk
chmod 777 -R /mnet/ramdisk
ln -s /mnt/ramdisk/ /ram
mount -t tmpfs -o size=1024m tmpfs /mnt/ramdisk
/etc/fstab
tmpfs  /mnt/ramdisk tmpfs  nodev,nosuid,noexec,nodiratime,size=1024M  0 0
mount -a # update fstab without reboot

#create swap file after the fact
sudo fallocate -l 8G /swapfile
sudo chmod 600 /swapfile
sudo mkswap /swapfile
sudo swapon /swapfile
sudo swapon -s

/etc/fstab:
/swapfile   none    swap    sw    0   0

# dated folders for files
_path=/path/to/directory/
for _d in $(find $_path  -mindepth 1 -maxdepth 1 -type d) ; do
  echo $_d
  cd $_d
  for _f in *.* ; do
    _structure=$(date -r "$_f" +%Y-%m-%d)/$(date -r "$_f" +%H)
    mkdir -p "$_structure"
    echo $_structure/$_f
    mv -- "$_f" "$_structure/"
  done
done
