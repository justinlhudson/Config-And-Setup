# python package manager
sudo apt-get intsall python-pip
sudo pip install --upgrade pip

# twitter in terminal
# https://github.com/DTVD/rainbowstream
pip install rainbowstream

# irc terminal client
apt-get install weechat

# mailx client (send mail)
sudo apt-get install bsd-mailx

# dns (dyndns)
apt-get install ddclient
# gui configuration (query dyndns)
dpkg-reconfigure ddclient

# stop ssh and other attacks
apt-get install fail2ban
# optional helpers
apt-get install nginx sendmail iptables-persistent
# check rules with
sudo iptables -S
apt-get install denyhosts

# terminal screen saver
apt-get install cmatrix

# torrent client
add-apt-repository ppa:transmissionbt/ppa
apt-get update
sudo apt-get install transmission-cli transmission-common transmission-daemon

# node
apt-get install nodejs
apt-get install npm
# node verse nodjs
sudo ln -s /usr/bin/nodejs /usr/bin/node

### NPM installs ###
npm install bower -g
npm install gulp -g
#deamonize nodejs scripts
sudo npm install -g pm2

