### sudo (without passwd) to user or apps ###
sudo visudo
<usr> ALL=NOPASSWD: /usr/bin/application
# not password for admins running sudo
%admin ALL=(ALL) NOPASSWD: ALL

### Logging system operations ###
tail -f /var/log/syslog

#### Remove files older then 5 days old recusively ###
find /path/to/files/* -depth -mtime +5 -exec rm {} \;

### Backup crontab ###
crontab -l > ~/$(date +%Y%m%d).crontab

### Create RAM disk ###
mkdir -p /mnt/ramdisk
chmod 777 -R /mnet/ramdisk
ln -s /mnt/ramdisk/ /ram
mount -t tmpfs -o size=1024m tmpfs /mnt/ramdisk
/etc/fstab
tmpfs  /mnt/ramdisk tmpfs  nodev,nosuid,noexec,nodiratime,size=1024M  0 0
mount -a # update fstab without reboot

### Create SWAP file after the fact or rather then a partition ###
sudo fallocate -l 8G /swapfile
sudo chmod 600 /swapfile
sudo mkswap /swapfile
sudo swapon /swapfile
sudo swapon -s
/etc/fstab:
/swapfile   none    swap    sw    0   0

# reload fstab (w/o reboot)
sudo mount -a

### Dated folders for files  ###
_path=/path/to/directory/
for _d in $(find $_path  -mindepth 1 -maxdepth 1 -type d) ; do
  echo $_d
  cd $_d
  for _f in *.* ; do
    _structure=$(date -r "$_f" +%Y-%m-%d)/$(date -r "$_f" +%H)
    mkdir -p "$_structure"
    echo $_structure/$_f
    mv -- "$_f" "$_structure/"
  done
done

### List drives ###
sudo blkid

### Disable automount ###
# Edit gnome settings (to not auto mount external drive, if configured in fstab)
# goto -> org.gnome.desktop.media-handling
dconf-editor

### Change cpu power strategy ###
apt-get install Cpufregutils
vim /etc/init.d/cpufrequtils
service cpufrequtils restart
cpufreq-info

