# searches in files for match
# -s: how or not to show contents
herein() {
  if [ -n "$1" ] && [[ "$1" == "-s" ]]; then
    shift
    grep -Rni -A 1 -B 1 . -e "$@"
  else
    grep -Rnli . -e "$@"
  fi
}

