# ability to detach the terminal emulator from the running programs
autodetach on

# do not  display the copyright page
startup_message off

# startup shell
shell ${SHELL}

# scroll back
defscrollback 5000

# Get rid of screen 0
bind c screen 1
bind ^c 1
bind 0 select 10

# prev and next window keys (alt L R arrow)
#bindkey -k prev
#bindkey-k next

# status
#caption always "screen [%n: %t]: "
hardstatus on
hardstatus alwayslastline "[%n: %t]: %H (%l)%-23=%D %Y:%m:%d %c:%s"


# Start windows at initial window
screen 1
screen 2
screen 3
screen 4
screen 5
screen 6
screen 7
screen 8
screen 9
screen 10
#screen -t <name> $_screen <command>

select 1

