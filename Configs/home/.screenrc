# ability to detach the terminal emulator from the running programs
autodetach on

# do not  display the copyright page
startup_message off

# startup shell
shell ${SHELL}

# scroll back
defscrollback 5000

# Get rid of screen 0
bind c screen 1
bind ^c 1
bind 0 select 10

# prev and next window keys (alt L R arrow)
#bindkey -k prev
#bindkey-k next

# status
#caption always "screen [%n: %t]: "
hardstatus on
hardstatus alwayslastline "[%n: %t]: %H (%l)%-23=%D %Y:%m:%d %c:%s"

# Start at initial window
screen 1
#select 1
