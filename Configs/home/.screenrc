# allow another screen (prevent vi from leaving junk behind)
altscreen on

# ability to detach the terminal emulator from the running programs
autodetach on

# do not  display the copyright page
startup_message off

# startup shell
shell ${SHELL}

# scroll back
defscrollback 5000

# Get rid of screen 0
bind c screen 1
bind ^c 1
bind 0 select 10

# prev and next window keys (alt L R arrow)
bindkey -k k1 select 1  #  F1 = screen 1
bindkey -k k2 select 2  #  F2 = screen 2
bindkey -k k3 select 3  #  F3 = screen 3
bindkey -k k4 select 4  #  F4 = screen 4
bindkey -k k5 select 5  #  F5 = screen 5
bindkey -k k6 select 6  #  F6 = screen 6
bindkey -k k7 select 7  #  F7 = screen 7
bindkey -k k8 select 8  #  F8 = screen 8
bindkey -k k9 select 9  #  F9 = screen 9
bindkey -k F1 prev      # F11 = prev
bindkey -k F2 next      # F12 = next

# status
#caption always "screen [%n: %t]: "
hardstatus on
hardstatus alwayslastline "[%n: %t]: %H (%l)%-23=%D %Y/%m/%d %c:%s"

# Start windows at initial window
screen 1
screen 2
screen 3
screen 4
screen 5
screen 6
screen 7
screen 8
screen 9
screen 10
#screen -t <name> $_screen <command>

select 1
