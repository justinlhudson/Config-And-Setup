sudo apt-get install openvpn bridge-utils
sudo apt-get install easy-rsa

# root terminal
sudo -i

make-cadir /etc/openvpn/easy-rsa

# edit
# reflect your new CA information
vim /etc/openvpn/easy-rsa/vars

source /etc/openvpn/easy-rsa/vars

# create server cert
./clean-all  ## Setup the easy-rsa directory (Deletes all keys)
./build-dh  ## takes a while consider backgrounding

# keys/
./build-ca
./build-key-server server

cd keys
openvpn --genkey --secret ta.key  ## Build a TLS key
sudo cp server.crt server.key ca.crt dh2048.pem ta.key ../../

# forward traffic to LAN
vim /etc/sysctl.conf
# change
net.ipv4.ip_forward = 1
# refresh
sysctl -p

# configure routing back to clients on host computer
iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE
#add
/etc/rc.local
iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE
<local_lan_interface_name> = eth0

# example server.conf
cp /usr/share/doc/openvpn/examples/sample-config-files/server.conf.gz /etc/openvpn/
gzip -d /etc/openvpn/server.conf.gz

vim server.conf
# edit (save changes)

# client Cert & Key
cd /etc/openvpn/easy-rsa/
source vars
./build-key client

# profile
/usr/share/doc/openvpn/examples/sample-config-files/client.conf
rename 
client.ovpn

# note:  match server with client config options!
